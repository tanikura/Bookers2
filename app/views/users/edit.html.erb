<p id="notice">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label><br />
          <%= f.text_field :name, autofocus: true, id: "user_name", placeholder: "Name" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label><br />
          <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="introduction">Introduction</label><br />
          <%= f.text_area :introduction, class: 'form-control', id: 'user_introduction' %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>